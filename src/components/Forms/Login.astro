<section>
  <div class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="px-8 py-6 mt-4 text-left bg-white shadow-lg">
      <h3 class="text-2xl font-bold text-center">Iniciar sesión</h3>
      <form id="loginForm">
        <div class="mt-4">
          <div>
            <label class="block" for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              placeholder="Ingresa tu correo electrónico"
              class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600"
            />
          </div>
          <div class="mt-4">
            <label class="block" for="password">Contraseña</label>
            <input
              type="password"
              id="password"
              name="password"
              required
              placeholder="Ingresa tu contraseña"
              class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600"
            />
          </div>
          <div class="flex items-baseline justify-between">
            <button
              type="submit"
              class="px-6 py-2 mt-4 text-white bg-blue-600 rounded-lg hover:bg-blue-700"
            >
              Iniciar sesión
            </button>
            <a href="#" class="text-sm text-blue-600 hover:underline">
              ¿Olvidaste tu contraseña?
            </a>
          </div>
        </div>
      </form>
      <div class="mt-6 text-grey-dark">
        ¿No tienes una cuenta?
        <a href="/signup" class="text-blue-600 hover:underline">
          Regístrate
        </a>
      </div>
    </div>
  </div>
</section>

<script type="module">
  import { initializeApp } from 'https://www.gstatic.com/firebasejs/9.23.0/firebase-app.js';
  import { getAuth, signInWithEmailAndPassword } from 'https://www.gstatic.com/firebasejs/9.23.0/firebase-auth.js';

  // Tu configuración de Firebase
  const firebaseConfig = {
    apiKey: 'AIzaSyAUZ6nU3sKP6e5lxO5OLh2opflhwo_SKOo',
    authDomain: 'mundo-vinilos.firebaseapp.com',
    projectId: 'mundo-vinilos',
    storageBucket: 'mundo-vinilos.appspot.com',
    messagingSenderId: '530268772709',
    appId: '1:530268772709:web:890afd79f8a3d40542a98c',
  };

  // Inicializar Firebase
  const app = initializeApp(firebaseConfig);
  const auth = getAuth(app);

  // Función para manejar el inicio de sesión
  async function handleLogin(event) {
    event.preventDefault();

    const emailInput = document.querySelector('#email');
    const passwordInput = document.querySelector('#password');

    if (!emailInput || !passwordInput) {
      console.error('No se encontraron los inputs de email o contraseña.');
      return;
    }

    const email = emailInput.value;
    const password = passwordInput.value;

    try {
      // Iniciar sesión con Firebase Authentication
      const userCredential = await signInWithEmailAndPassword(auth, email, password);

      // Obtener el ID token del usuario autenticado
      const idToken = await userCredential.user.getIdToken();

      // Enviar el ID token al servidor para generar una sesión
      const response = await fetch('/api/auth/signin', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          Authorization: `Bearer ${idToken}`,
        },
      });

      if (response.ok) {
        // Redirige al perfil si la autenticación fue exitosa
        window.location.href = '/perfil';
      } else {
        const errorResponse = await response.json();
        console.error('Error en la respuesta del servidor:', errorResponse.message);
        alert('Error al iniciar sesión: ' + errorResponse.message);
      }
    } catch (error) {
      console.error('Error al iniciar sesión:', error);
      alert('Error al iniciar sesión: ' + error.message);
    }
  }

  // Agregar evento al formulario
  document.querySelector('#loginForm').addEventListener('submit', handleLogin);
</script>
